{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"width": 1300,
"height": 1000,
"title": "Mineral Ore Mines In Australia as of 2022",
"projection": {"type": "equirectangular"},
"layer": [
    {
    "data": {
        "url": "https://raw.githubusercontent.com/bwee0001/FIT3179Week9Homework/main/js/australiamap_ne_50m.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
    },
    "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
    "data": {
        "url": "https://raw.githubusercontent.com/bwee0001/FIT3179Week9Homework/main/data/Mineral%20Ores%20Australia.csv"
    },
    "transform": [
        {"filter": "datum.country == 'Australia'"},
        {"calculate": "'' + datum.commod1 + '' + datum.commod2 + '' + datum.commod3", "as": "allMinerals"}
    ],
    "params":[
        {
            "name": "development_highlight",
            "select": {"type": "point", "fields": ["dev_stat"]},
            "bind": "legend"
        },
        {
            "name": "state_highlight",
            "select": {"type": "point", "fields": ["state"]},
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Queensland",
                    "Northern Territory*",
                    "Western Australia",
                    "Tasmania",
                    "New South Wales",
                    "South Australia",
                    "Territory of Christmas Island"
                ],
                "labels": [
                    "Show All",
                    "Queensland",
                    "Northern Territory*",
                    "Western Australia",
                    "Tasmania",
                    "New South Wales",
                    "South Australia",
                    "Territory of Christmas Island"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "mark": {"type": "circle", "tooltip": {"content": "data"}},
    "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {
            "field": "dev_stat",
            "type": "nominal",
            "title": "Development Status",
            "scale": {"scheme": "category10"}
        },
        "opacity": {
            "condition": {"param": "development_highlight", "value": 0.9},
            "value": 0.1
        } 
    }
    }
]
}